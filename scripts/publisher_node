#!/usr/bin/env python
"""
SuperCamera ROS Publisher Node

Publishes images from UseePlus/SuperCamera USB borescope cameras to ROS topics.
Supports cameras with VID:2ce3 PID:3828.

Usage:
    rosrun supercamera_ros publisher_node
    rosrun supercamera_ros publisher_node _device:=/dev/supercamera
"""

import rospy
from sensor_msgs.msg import Image, CompressedImage
from cv_bridge import CvBridge
import cv2 as cv
import numpy as np
import os
import threading
import queue
import time


class SuperCameraPublisher:
    """ROS node that publishes images from SuperCamera USB device."""
    
    def __init__(self):
        # Get parameters
        self.device_path = rospy.get_param('~device', '/dev/supercamera')
        topic = rospy.get_param('~topic', '/supercamera/image_raw')
        self.frame_id = rospy.get_param('~frame_id', 'supercamera_link')
        queue_size = rospy.get_param('~queue_size', 10)
        self.publish_raw = rospy.get_param('~publish_raw', True)
        self.publish_compressed = rospy.get_param('~publish_compressed', True)
        
        # Publishers
        if self.publish_raw:
            self.pub = rospy.Publisher(topic, Image, queue_size=queue_size)
        else:
            self.pub = None
        
        if self.publish_compressed:
            self.pub_compressed = rospy.Publisher(
                topic + '/compressed', CompressedImage, queue_size=queue_size)
        else:
            self.pub_compressed = None
        
        self.bridge = CvBridge()
        
        # State
        self.running = True
        self.fd = None
        self.frame_count = 0
        
        # Open device
        if not self._open_device():
            rospy.logerr('Failed to open %s' % self.device_path)
            rospy.logerr('Make sure the driver is installed: run install_driver.sh')
            return
        
        # Start capture thread
        self.thread = threading.Thread(target=self._capture_loop, daemon=True)
        self.thread.start()
        
        rospy.loginfo('SuperCamera started: %s -> %s' % (self.device_path, topic))
    
    def _open_device(self):
        """Open the character device."""
        if not os.path.exists(self.device_path):
            rospy.logerr('Device not found: %s' % self.device_path)
            rospy.logerr('Is the camera plugged in?')
            return False
        
        try:
            self.fd = os.open(self.device_path, os.O_RDONLY)
            return True
        except Exception as e:
            rospy.logerr('Cannot open device: %s' % str(e))
            return False
    
    def _capture_loop(self):
        """Main capture loop - reads USB data and publishes frames."""
        # Queue for JPEG frames (reader -> publisher)
        frame_queue = queue.Queue(maxsize=30)
        
        # Start reader thread
        reader = threading.Thread(
            target=self._reader_thread,
            args=(frame_queue,),
            daemon=True
        )
        reader.start()
        
        # Publish frames
        frames_published = 0
        frames_dropped = 0
        last_good_frame = None
        last_good_jpeg = None
        start_time = time.time()
        
        while self.running and not rospy.is_shutdown():
            try:
                result = frame_queue.get(timeout=0.1)
            except queue.Empty:
                continue
            
            jpeg_data, stats = result
            
            # Handle dropped frames by repeating last good frame
            if jpeg_data is None:
                frames_dropped += 1
                if last_good_frame is not None and last_good_jpeg is not None:
                    self._publish_frame(last_good_frame, last_good_jpeg)
                    frames_published += 1
                continue
            
            # Decode JPEG (only if publishing raw)
            if self.publish_raw:
                frame = cv.imdecode(
                    np.frombuffer(jpeg_data, dtype=np.uint8),
                    cv.IMREAD_COLOR
                )
            else:
                frame = True  # Placeholder - we have valid data
            
            if frame is not None:
                last_good_frame = frame if self.publish_raw else None
                last_good_jpeg = jpeg_data
                self._publish_frame(frame if self.publish_raw else None, jpeg_data)
                frames_published += 1
            else:
                # Decode failed - repeat last good frame
                frames_dropped += 1
                if last_good_frame is not None or last_good_jpeg is not None:
                    self._publish_frame(last_good_frame, last_good_jpeg)
                    frames_published += 1
            
            # Log every 100 frames
            if frames_published % 100 == 0 and frames_published > 0:
                elapsed = time.time() - start_time
                fps = frames_published / elapsed
                drop_pct = 100 * frames_dropped / (frames_published + frames_dropped) if frames_dropped > 0 else 0
                rospy.loginfo(
                    'Published %d frames @ %.1f FPS (%.1f%% dropped)' %
                    (frames_published, fps, drop_pct)
                )
        
        rospy.loginfo('Capture loop ended')
    
    def _reader_thread(self, frame_queue):
        """
        USB reader thread - parses packets and extracts JPEG frames.
        """
        USB_HDR = 5
        CAM_HDR = 7
        TOTAL_HDR = USB_HDR + CAM_HDR
        READ_SIZE = 65536
        JPEG_SOI = b'\xff\xd8'
        JPEG_EOI = b'\xff\xd9'
        
        raw_buffer = bytearray()
        jpeg_buffer = bytearray()
        frames_good = 0
        frames_bad = 0
        
        while self.running and not rospy.is_shutdown():
            try:
                chunk = os.read(self.fd, READ_SIZE)
                if not chunk:
                    continue
                raw_buffer.extend(chunk)
                
                # Process complete packets
                while len(raw_buffer) >= TOTAL_HDR:
                    # Check for valid packet header (magic: AA BB)
                    if raw_buffer[0] != 0xAA or raw_buffer[1] != 0xBB:
                        # Lost sync - find next header
                        idx = raw_buffer.find(b'\xaa\xbb')
                        if idx > 0:
                            raw_buffer = raw_buffer[idx:]
                        elif idx < 0:
                            raw_buffer.clear()
                        continue
                    
                    # Parse length from header
                    payload_len = raw_buffer[3] | (raw_buffer[4] << 8)
                    packet_size = USB_HDR + payload_len
                    
                    # Sanity check length
                    if payload_len < CAM_HDR or payload_len > 2000:
                        raw_buffer = raw_buffer[1:]
                        continue
                    
                    # Wait for complete packet
                    if len(raw_buffer) < packet_size:
                        break
                    
                    # Extract JPEG payload (after both headers)
                    jpeg_payload = raw_buffer[TOTAL_HDR:packet_size]
                    
                    # Check if this starts a new JPEG frame
                    if len(jpeg_payload) >= 2 and jpeg_payload[:2] == JPEG_SOI:
                        # New frame - check if previous frame is complete
                        if len(jpeg_buffer) > 1000:
                            eoi_pos = jpeg_buffer.rfind(JPEG_EOI)
                            if eoi_pos > 0:
                                jpeg_data = bytes(jpeg_buffer[:eoi_pos + 2])
                                frames_good += 1
                                try:
                                    frame_queue.put_nowait(
                                        (jpeg_data, (frames_good, frames_bad))
                                    )
                                except queue.Full:
                                    pass
                            else:
                                frames_bad += 1
                                try:
                                    frame_queue.put_nowait((None, (frames_good, frames_bad)))
                                except queue.Full:
                                    pass
                        
                        # Start new frame
                        jpeg_buffer = bytearray(jpeg_payload)
                    else:
                        # Continue accumulating
                        jpeg_buffer.extend(jpeg_payload)
                    
                    # Advance past this packet
                    raw_buffer = raw_buffer[packet_size:]
                    
            except Exception as e:
                if self.running:
                    rospy.logwarn('Reader error: %s' % str(e))
    
    def _publish_frame(self, frame, jpeg_data):
        """Publish a frame to ROS."""
        try:
            stamp = rospy.Time.now()
            
            # Publish raw image
            if self.pub is not None and frame is not None:
                msg = self.bridge.cv2_to_imgmsg(frame, encoding='bgr8')
                msg.header.stamp = stamp
                msg.header.frame_id = self.frame_id
                self.pub.publish(msg)
            
            # Publish compressed image (direct JPEG - very efficient!)
            if self.pub_compressed is not None and jpeg_data is not None:
                cmsg = CompressedImage()
                cmsg.header.stamp = stamp
                cmsg.header.frame_id = self.frame_id
                cmsg.format = 'jpeg'
                cmsg.data = jpeg_data
                self.pub_compressed.publish(cmsg)
            
            self.frame_count += 1
        except Exception as e:
            rospy.logwarn('Publish error: %s' % str(e))
    
    def shutdown(self):
        """Cleanup on shutdown."""
        self.running = False
        if self.fd is not None:
            try:
                os.close(self.fd)
            except:
                pass


def main():
    rospy.init_node('supercamera_publisher', anonymous=False)
    node = SuperCameraPublisher()
    
    rospy.on_shutdown(node.shutdown)
    rospy.spin()


if __name__ == '__main__':
    try:
        main()
    except rospy.ROSInterruptException:
        pass
